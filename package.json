{
  "name": "scrn-rcrdr",
  "version": "1.0.0",
  "main": "main.js",
"scripts": {
  "start": "electron .",
  "build": "electron-builder",
  "dist": "electron-builder --win nsis --x64"
},
  "devDependencies": {
    "electron": "^25.8.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1"
  },
  "build": {
    "appId": "com.scrnrcrdr.app",
    "productName": "Scrn Rcrdr",
    "copyright": "Copyright Â© 2025 Nathan Hitchings",
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Scrn Rcrdr"
    },
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
        "to": "ffmpeg/ffmpeg.exe"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "files": [
      "**/*",
      "!clips/**"
    ]
  }
}
